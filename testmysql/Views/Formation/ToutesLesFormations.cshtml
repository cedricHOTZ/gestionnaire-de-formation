@model  testmysql.Models.AccueilViewModel
@{
    ViewBag.Title = "Toutes Les Formations";
}
    <div class="container padding30">
        <h2>ToutesLesFormations</h2>

        @foreach (var dto in Model.ListFormations)
        {
            <article class="info-block col-md-3 col-sm-6">


                <h4>
                    @Html.ActionLink(dto.Formation.Nom, "DetailsFormation", "Formation", new { nomSeo = dto.Formation.NomSeo }, new { @class = "lien-formation" })
                </h4>
                <p>
                    @if (dto.Note == 0)
                    {
                        <div>Aucun avis</div>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-star yellow"></span>
                        if (dto.Note > 1)
                        {
                            <span class="glyphicon glyphicon-star yellow"></span>
                        }

                        if (dto.Note > 2)
                        {
                            <span class="glyphicon glyphicon-star yellow"></span>
                        }

                        if (dto.Note > 3)
                        {
                            <span class="glyphicon glyphicon-star yellow"></span>
                        }

                        if (dto.Note > 4)
                        {
                            <span class="glyphicon glyphicon-star yellow"></span>
                        }


                        <span> @dto.Note / 5 </span>
                    }
                </p>
                <div>@dto.Formation.Description</div>
            </article>

        }



    </div>

